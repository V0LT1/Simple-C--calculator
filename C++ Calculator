// simple C++ Calculator
#include <iostream>
using namespace std;

int main()
{
  int n1, n2, op;
  cout << "choose numbers" << "\n";
  cin >> n1;
  cout << "choose numbers" << "\n";
  cin >> n2
  cout << "choose operation number" << "\n";
  cin >> op;

  cout << "[1] +\n";
  cout << "[2] -\n";
  cout << "[3] *\n";
  cout << "[4] /\n";

  switch(op)
  {
    case 1:
    cout << n1 << " " << n2 << n1 + n2 << "\n";
    break;
    case 2:
    cout << n1 << " " << n2 << n1 - n2 << "\n";
    break;
    case 3:
    cout << n1 << " " << n2 << n1 * n2 << "\n";
    break;
    case 4:
    cout << n1 << " " << n2 << n1 / n2 << "\n";
    break;
    default:
    cout << "operation number is invalid." << "\n";
  }
  return 0;
}
